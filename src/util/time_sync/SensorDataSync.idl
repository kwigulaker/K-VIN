// SensorDataSync.idl

struct Frame {
    long width;
    long height;
    long step;
    string encoding;
    long timestamp;
    sequence<octet> data;
};

struct MPU6050MSG {
    short ax;
    short ay;
    short az;
    short gx;
    short gy;
    short gz;
    long timestamp;
};

struct SensorDataSync {
 Frame cam_L;
 Frame cam_R;
 Frame cam_depth;
 MPU6050MSG imu_parsed;
 long timestamp;
};
